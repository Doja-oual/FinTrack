<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Mes Catégories</h1>
            <a href="/categories/create" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                <i class="fas fa-plus mr-2"></i>Nouvelle catégorie
            </a>
        </div>

        <!-- Messages -->
        <% if (success) { %>
            <div class="bg-green-100 border-l-4 border-green-500 p-4 mb-4 rounded">
                <p class="text-green-700"><%= success %></p>
            </div>
        <% } %>
        
        <% if (error) { %>
            <div class="bg-red-100 border-l-4 border-red-500 p-4 mb-4 rounded">
                <p class="text-red-700"><%= error %></p>
            </div>
        <% } %>

        <!-- Catégories Revenus -->
        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h2 class="text-xl font-bold mb-4 text-green-600">
                <i class="fas fa-arrow-up mr-2"></i>Revenus
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <% incomeCategories.forEach(category => { %>
                    <div class="border rounded-lg p-4 flex items-center justify-between" style="border-left: 4px solid <%= category.color %>">
                        <div class="flex items-center">
                            <i class="<%= category.icon %> text-2xl mr-3" style="color: <%= category.color %>"></i>
                            <span class="font-semibold"><%= category.name %></span>
                        </div>
                        <div class="flex space-x-2">
                            <a href="/categories/<%= category.id %>/edit" class="text-blue-600 hover:text-blue-800">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="POST" action="/categories/<%= category.id %>/delete" class="inline" onsubmit="return confirm('Supprimer cette catégorie ?')">
                                <button type="submit" class="text-red-600 hover:text-red-800">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- Catégories Dépenses -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-bold mb-4 text-red-600">
                <i class="fas fa-arrow-down mr-2"></i>Dépenses
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <% expenseCategories.forEach(category => { %>
                    <div class="border rounded-lg p-4 flex items-center justify-between" style="border-left: 4px solid <%= category.color %>">
                        <div class="flex items-center">
                            <i class="<%= category.icon %> text-2xl mr-3" style="color: <%= category.color %>"></i>
                            <span class="font-semibold"><%= category.name %></span>
                        </div>
                        <div class="flex space-x-2">
                            <a href="/categories/<%= category.id %>/edit" class="text-blue-600 hover:text-blue-800">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="POST" action="/categories/<%= category.id %>/delete" class="inline" onsubmit="return confirm('Supprimer cette catégorie ?')">
                                <button type="submit" class="text-red-600 hover:text-red-800">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <div class="mt-6">
            <a href="/dashboard" class="text-blue-600 hover:text-blue-800">
                <i class="fas fa-arrow-left mr-2"></i>Retour au tableau de bord
            </a>
        </div>
    </div>

</body>
</html>