<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - FinSolutions</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in {
            animation: fadeIn 0.6s ease-out forwards;
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    
    <!-- ========================================== -->
    <!-- NAVBAR -->
    <!-- ========================================== -->
    <nav class="bg-white shadow-sm border-b sticky top-0 z-50">
        <div class="container mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-6">
                    <a href="/dashboard" class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                        üí∞ FinSolutions
                    </a>
                    <a href="/dashboard" class="text-gray-600 hover:text-purple-600 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>Retour au dashboard
                    </a>
                </div>
</span>
<a href="/logout" class="text-red-600 hover:text-red-800 transition-colors">
<i class="fas fa-sign-out-alt"></i> D√©connexion
</a>
</div>
</div>
</div>
</nav>
<div class="container mx-auto px-6 py-8">
    
    <!-- ========================================== -->
    <!-- EN-T√äTE AVEC S√âLECTEUR DE P√âRIODE -->
    <!-- ========================================== -->
    <div class="mb-8 fade-in">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
            <div>
                <h1 class="text-4xl font-bold text-gray-800 mb-2">üìä Rapports Financiers</h1>
                <p class="text-gray-600">Analyse d√©taill√©e de <strong><%= monthName %></strong></p>
            </div>
            
            <!-- S√©lecteur de mois/ann√©e -->
            <form method="GET" action="/reports" class="flex flex-wrap gap-3">
                <select name="month" class="px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-purple-500 focus:outline-none transition-colors">
                    <% for(let m = 1; m <= 12; m++) { %>
                        <option value="<%= m %>" <%= selectedMonth == m ? 'selected' : '' %>>
                            <%= new Date(2000, m-1).toLocaleString('fr-FR', {month: 'long'}) %>
                        </option>
                    <% } %>
                </select>
                <select name="year" class="px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-purple-500 focus:outline-none transition-colors">
                    <% for(let y = 2020; y <= 2030; y++) { %>
                        <option value="<%= y %>" <%= selectedYear == y ? 'selected' : '' %>><%= y %></option>
                    <% } %>
                </select>
                <button type="submit" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition-colors">
                    <i class="fas fa-sync-alt mr-2"></i>Actualiser
                </button>
            </form>
        </div>
    </div>

    <!-- ========================================== -->
    <!-- 1. R√âSUM√â MENSUEL -->
    <!-- ========================================== -->
    <div class="bg-white rounded-3xl shadow-xl p-8 mb-8 card-hover fade-in">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <i class="fas fa-chart-bar text-purple-500 mr-3 text-3xl"></i>
            R√©sum√© Mensuel
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Carte Revenus -->
            <div class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl p-6 text-white shadow-lg card-hover">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p class="text-sm opacity-90 mb-2 uppercase tracking-wide">üíµ Revenus</p>
                        <p class="text-3xl font-bold"><%= summary.income.toFixed(2) %> <span class="text-lg">MAD</span></p>
                    </div>
                    <div class="bg-white bg-opacity-20 rounded-full p-3">
                        <i class="fas fa-arrow-up text-2xl"></i>
                    </div>
                </div>
                <div class="flex items-center text-sm pt-3 border-t border-white border-opacity-20">
                    <i class="fas fa-arrow-<%= summary.incomeChange >= 0 ? 'up' : 'down' %> mr-2"></i>
                    <span><%= Math.abs(summary.incomeChange).toFixed(1) %>% vs mois pr√©c√©dent</span>
                </div>
            </div>

            <!-- Carte D√©penses -->
            <div class="bg-gradient-to-br from-red-500 to-pink-600 rounded-xl p-6 text-white shadow-lg card-hover">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p class="text-sm opacity-90 mb-2 uppercase tracking-wide">üí∏ D√©penses</p>
                        <p class="text-3xl font-bold"><%= summary.expense.toFixed(2) %> <span class="text-lg">MAD</span></p>
                    </div>
                    <div class="bg-white bg-opacity-20 rounded-full p-3">
                        <i class="fas fa-arrow-down text-2xl"></i>
                    </div>
                </div>
                <div class="flex items-center text-sm pt-3 border-t border-white border-opacity-20">
                    <i class="fas fa-arrow-<%= summary.expenseChange >= 0 ? 'up' : 'down' %> mr-2"></i>
                    <span><%= Math.abs(summary.expenseChange).toFixed(1) %>% vs mois pr√©c√©dent</span>
                </div>
            </div>

            <!-- Carte Solde Net -->
            <div class="bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl p-6 text-white shadow-lg card-hover">
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <p class="text-sm opacity-90 mb-2 uppercase tracking-wide">üí∞ Solde Net</p>
                        <p class="text-3xl font-bold"><%= summary.balance.toFixed(2) %> <span class="text-lg">MAD</span></p>
                    </div>
                    <div class="bg-white bg-opacity-20 rounded-full p-3">
                        <i class="fas fa-<%= summary.balance >= 0 ? 'check-circle' : 'exclamation-circle' %> text-2xl"></i>
                    </div>
                </div>
                <div class="flex items-center text-sm pt-3 border-t border-white border-opacity-20">
                    <i class="fas fa-info-circle mr-2"></i>
                    <span><%= summary.balance >= 0 ? '‚úÖ Exc√©dent' : '‚ö†Ô∏è D√©ficit' %></span>
                </div>
            </div>
        </div>
    </div>

    <!-- ========================================== -->
    <!-- 2. RAPPORT PAR CAT√âGORIE -->
    <!-- ========================================== -->
    <div class="bg-white rounded-3xl shadow-xl p-8 mb-8 card-hover fade-in">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
            <i class="fas fa-tags text-orange-500 mr-3 text-3xl"></i>
            D√©penses par Cat√©gorie
        </h2>

        <% if (categoryReport.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b-2 border-gray-200">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-semibold text-gray-600 uppercase tracking-wider">
                                Cat√©gorie
                            </th>
                            <th class="px-6 py-4 text-right text-sm font-semibold text-gray-600 uppercase tracking-wider">
                                Montant
                            </th>
                            <th class="px-6 py-4 text-right text-sm font-semibold text-gray-600 uppercase tracking-wider">
                                % du total
                            </th>
                            <th class="px-6 py-4 text-right text-sm font-semibold text-gray-600 uppercase tracking-wider">
                                √âvolution
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% categoryReport.forEach(cat => { %>
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">
                                    <span class="font-medium text-gray-800 text-base">
                                        <%= cat.name %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <span class="font-semibold text-gray-900">
                                        <%= cat.amount.toFixed(2) %> MAD
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <span class="bg-purple-100 text-purple-700 px-3 py-1 rounded-full text-sm font-medium">
                                        <%= cat.percentage.toFixed(1) %>%
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <span class="flex items-center justify-end font-semibold <%= cat.change >= 0 ? 'text-red-600' : 'text-green-600' %>">
                                        <i class="fas fa-arrow-<%= cat.change >= 0 ? 'up' : 'down' %> mr-2"></i>
                                        <%= Math.abs(cat.change).toFixed(1) %>%
                                    </span>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-12 text-gray-400">
                <i class="fas fa-inbox text-6xl mb-4"></i>
                <p class="text-lg">Aucune d√©pense cat√©goris√©e ce mois-ci</p>
            </div>
        <% } %>
    </div>

    <!-- ========================================== -->
    <!-- 3. TOP 5 D√âPENSES & 4. TENDANCES -->
    <!-- ========================================== -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        
        <!-- TOP 5 D√âPENSES -->
        <div class="bg-white rounded-3xl shadow-xl p-8 card-hover fade-in">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                <i class="fas fa-trophy text-yellow-500 mr-3 text-3xl"></i>
                Top 5 des D√©penses
            </h2>

            <% if (topExpenses.length > 0) { %>
                <div class="space-y-4">
                    <% topExpenses.forEach((transaction, index) => { %>
                        <div class="flex items-center justify-between p-4 bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl hover:shadow-md transition-all">
                            <div class="flex items-center flex-1">
                                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-red-400 to-pink-500 flex items-center justify-center mr-4 shadow-md">
                                    <span class="text-white font-bold text-lg">#<%= index + 1 %></span>
                                </div>
                                <div class="flex-1">
                                    <p class="font-semibold text-gray-800 text-base mb-1">
                                        <%= transaction.description || 'Sans description' %>
                                    </p>
                                    <p class="text-sm text-gray-500 flex items-center">
                                        <i class="fas fa-tag mr-2"></i>
                                        <%= transaction.category ? transaction.category.name : 'Non cat√©goris√©' %>
                                        <span class="mx-2">‚Ä¢</span>
                                        <i class="fas fa-calendar mr-2"></i>
                                        <%= new Date(transaction.date).toLocaleDateString('fr-FR') %>
                                    </p>
                                </div>
                            </div>
                            <span class="text-xl font-bold text-red-600 ml-4">
                                <%= parseFloat(transaction.amount).toFixed(2) %> MAD
                            </span>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-12 text-gray-400">
                    <i class="fas fa-receipt text-6xl mb-4"></i>
                    <p class="text-lg">Aucune d√©pense ce mois-ci</p>
                </div>
            <% } %>
        </div>

        <!-- TENDANCES -->
        <div class="bg-white rounded-3xl shadow-xl p-8 card-hover fade-in">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                <i class="fas fa-chart-line text-blue-500 mr-3 text-3xl"></i>
                Tendances & Pr√©dictions
            </h2>

            <div class="space-y-5">
                <!-- Moyenne mensuelle -->
                <div class="p-5 bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl border-l-4 border-blue-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-blue-600 mb-1 font-medium uppercase tracking-wide">
                                üìä Moyenne Mensuelle (6 mois)
                            </p>
                            <p class="text-3xl font-bold text-blue-700">
                                <%= trends.avgExpense.toFixed(2) %> <span class="text-lg">MAD</span>
                            </p>
                        </div>
                        <div class="bg-blue-200 rounded-full p-4">
                            <i class="fas fa-chart-bar text-blue-600 text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Pr√©diction -->
                <div class="p-5 bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl border-l-4 border-purple-500">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-purple-600 mb-1 font-medium uppercase tracking-wide">
                                üîÆ Pr√©diction Mois Prochain
                            </p>
                            <p class="text-3xl font-bold text-purple-700">
                                <%= trends.prediction.toFixed(2) %> <span class="text-lg">MAD</span>
                            </p>
                        </div>
                        <div class="bg-purple-200 rounded-full p-4">
                            <i class="fas fa-crystal-ball text-purple-600 text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Tendance g√©n√©rale -->
                <div class="p-5 <%= trends.trend === 'hausse' ? 'bg-gradient-to-br from-red-50 to-red-100 border-l-4 border-red-500' : 'bg-gradient-to-br from-green-50 to-green-100 border-l-4 border-green-500' %> rounded-xl">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm <%= trends.trend === 'hausse' ? 'text-red-600' : 'text-green-600' %> mb-1 font-medium uppercase tracking-wide">
                                Tendance G√©n√©rale
                            </p>
                            <p class="text-2xl font-bold <%= trends.trend === 'hausse' ? 'text-red-700' : 'text-green-700' %> flex items-center">
                                <i class="fas fa-arrow-<%= trends.trend === 'hausse' ? 'up' : 'down' %> mr-3"></i>
                                <%= trends.trend === 'hausse' ? 'En hausse' : 'En baisse' %>
                            </p>
                        </div>
                        <div class="<%= trends.trend === 'hausse' ? 'bg-red-200' : 'bg-green-200' %> rounded-full p-4">
                            <i class="fas fa-<%= trends.trend === 'hausse' ? 'exclamation-triangle' : 'check-circle' %> <%= trends.trend === 'hausse' ? 'text-red-600' : 'text-green-600' %> text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Cat√©gories en hausse/baisse -->
                <% if (trends.risingCategories && trends.risingCategories.length > 0) { %>
                <div class="grid grid-cols-2 gap-4 mt-4">
                    <div class="bg-red-50 p-4 rounded-lg border border-red-200">
                        <h4 class="font-semibold text-red-700 mb-2 text-sm flex items-center">
                            <i class="fas fa-arrow-up mr-2"></i>En Hausse
                        </h4>
                        <ul class="space-y-1">
                            <% trends.risingCategories.forEach(cat => { %>
                                <li class="text-xs text-red-600">
                                    <%= cat.name %> (+<%= cat.increase.toFixed(0) %>%)
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                    
                    <% if (trends.fallingCategories && trends.fallingCategories.length > 0) { %>
                    <div class="bg-green-50 p-4 rounded-lg border border-green-200">
                        <h4 class="font-semibold text-green-700 mb-2 text-sm flex items-center">
                            <i class="fas fa-arrow-down mr-2"></i>En Baisse
                        </h4>
                        <ul class="space-y-1">
                            <% trends.fallingCategories.forEach(cat => { %>
                                <li class="text-xs text-green-600">
                                    <%= cat.name %> (-<%= cat.decrease.toFixed(0) %>%)
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                    <% } %>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- ========================================== -->
    <!-- 5. EXPORT PDF -->
    <!-- ========================================== -->
    <div class="bg-white rounded-3xl shadow-xl p-8 mb-8 card-hover fade-in">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
            <div class="flex-1">
                <h2 class="text-2xl font-bold text-gray-800 mb-2 flex items-center">
                    <i class="fas fa-file-pdf text-red-500 mr-3 text-3xl"></i>
                    Exporter le Rapport
                </h2>
                <p class="text-gray-600">
                    T√©l√©chargez une version PDF professionnelle de ce rapport pour l'archiver ou le partager
                </p>
            </div>
            <a href="/reports/export-pdf?month=<%= selectedMonth %>&year=<%= selectedYear %>" 
               class="bg-gradient-to-r from-red-500 to-pink-600 text-white px-8 py-4 rounded-xl hover:shadow-2xl transition-all duration-300 flex items-center font-semibold text-lg">
                <i class="fas fa-download mr-3 text-xl"></i>
                T√©l√©charger PDF
            </a>
        </div>
    </div>

</div>

<!-- ========================================== -->
<!-- SCRIPTS -->
<!-- ========================================== -->
<script>
    // Animation au scroll
    document.addEventListener('DOMContentLoaded', function() {
        const elements = document.querySelectorAll('.fade-in');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }, index * 100);
                }
            });
        }, { threshold: 0.1 });
        
        elements.forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'all 0.6s ease-out';
            observer.observe(el);
        });
    });

    // Message de confirmation lors du t√©l√©chargement PDF
    document.querySelector('a[href*="export-pdf"]').addEventListener('click', function(e) {
        const btn = this;
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-3"></i>G√©n√©ration en cours...';
        btn.classList.add('opacity-75', 'cursor-wait');
        
        setTimeout(() => {
            btn.innerHTML = originalText;
            btn.classList.remove('opacity-75', 'cursor-wait');
        }, 3000);
    });
</script>
</body>
</html>
