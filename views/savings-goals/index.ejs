<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - FinSolutions</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-pink-50 via-purple-50 to-rose-50 min-h-screen">
    <div class="container mx-auto px-6 py-8">
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-4xl font-bold text-gray-800"><%= title %></h1>
                <p class="text-gray-600">Suivez vos objectifs d'épargne</p>
            </div>
            <div class="flex space-x-4">
                <a href="/dashboard" class="text-gray-600 hover:text-pink-500">
                    <i class="fas fa-arrow-left mr-2"></i>Dashboard
                </a>
                <a href="/savings-goals/create" class="bg-gradient-to-r from-pink-400 to-purple-400 text-white px-6 py-3 rounded-full hover:shadow-lg transition">
                    <i class="fas fa-plus mr-2"></i>Nouvel Objectif
                </a>
            </div>
        </div>

        <% if (goals.length === 0) { %>
            <div class="bg-white rounded-3xl shadow-xl p-12 text-center">
                <div class="inline-block bg-pink-100 rounded-full p-8 mb-6">
                    <i class="fas fa-piggy-bank text-pink-400 text-6xl"></i>
                </div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Aucun objectif d'épargne</h2>
                <p class="text-gray-600 mb-6">Commencez à planifier votre avenir financier</p>
                <a href="/savings-goals/create" class="inline-block bg-gradient-to-r from-pink-400 to-purple-400 text-white px-8 py-4 rounded-full hover:shadow-lg transition">
                    <i class="fas fa-plus mr-2"></i>Créer mon premier objectif
                </a>
            </div>
        <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% goals.forEach(goal => { %>
                    <div class="bg-white rounded-3xl shadow-xl p-6 border-2 <%= goal.isCompleted ? 'border-green-200' : 'border-pink-100' %>">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex-1">
                                <h3 class="text-xl font-bold text-gray-800 mb-1"><%= goal.name %></h3>
                                <% if (goal.description) { %>
                                    <p class="text-sm text-gray-500"><%= goal.description %></p>
                                <% } %>
                            </div>
                            <% if (goal.isCompleted) { %>
                                <span class="bg-green-100 text-green-600 px-3 py-1 rounded-full text-xs font-semibold">
                                    <i class="fas fa-check mr-1"></i>Atteint
                                </span>
                            <% } %>
                        </div>

                        <div class="mb-4">
                            <div class="flex justify-between text-sm mb-2">
                                <span class="text-gray-600">Progression</span>
                                <span class="font-bold text-gray-800"><%= goal.progress.toFixed(1) %>%</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                                <div class="h-full rounded-full <%= goal.progress >= 100 ? 'bg-green-500' : goal.progress >= 75 ? 'bg-blue-500' : goal.progress >= 50 ? 'bg-yellow-500' : 'bg-pink-500' %>" 
                                     style="width: <%= Math.min(100, goal.progress) %>%">
                                </div>
                            </div>
                        </div>

                        <div class="space-y-2 mb-4">
                            <div class="flex justify-between">
                                <span class="text-gray-600 text-sm">Épargné</span>
                                <span class="font-bold text-green-600"><%= parseFloat(goal.currentAmount).toFixed(2) %> MAD</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 text-sm">Objectif</span>
                                <span class="font-bold text-gray-800"><%= parseFloat(goal.targetAmount).toFixed(2) %> MAD</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 text-sm">Restant</span>
                                <span class="font-bold text-orange-600"><%= goal.remainingAmount.toFixed(2) %> MAD</span>
                            </div>
                            <% if (goal.daysRemaining) { %>
                                <div class="flex justify-between">
                                    <span class="text-gray-600 text-sm">Jours restants</span>
                                    <span class="font-bold <%= goal.daysRemaining < 30 ? 'text-red-600' : 'text-gray-800' %>">
                                        <%= goal.daysRemaining %> jours
                                    </span>
                                </div>
                                <% if (!goal.isCompleted && goal.recommendedMonthlySaving > 0) { %>
                                    <div class="bg-blue-50 p-3 rounded-lg mt-2">
                                        <div class="text-xs text-blue-600 mb-1">Épargne mensuelle recommandée</div>
                                        <div class="text-lg font-bold text-blue-700"><%= goal.recommendedMonthlySaving.toFixed(2) %> MAD/mois</div>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>

                        <div class="flex space-x-2">
                            <% if (!goal.isCompleted) { %>
                                <button onclick="showAddFundsModal(<%= goal.id %>, '<%= goal.name %>')" 
                                        class="flex-1 bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition">
                                    <i class="fas fa-plus mr-1"></i>Ajouter
                                </button>
                            <% } %>
                            <a href="/savings-goals/<%= goal.id %>/edit" 
                               class="flex-1 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition text-center">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="POST" action="/savings-goals/<%= goal.id %>/delete" onsubmit="return confirm('Supprimer cet objectif ?')">
                                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <!-- Modal Ajouter des fonds -->
    <div id="addFundsModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-3xl p-8 max-w-md w-full mx-4">
            <h3 class="text-2xl font-bold text-gray-800 mb-4">Ajouter de l'argent</h3>
            <p class="text-gray-600 mb-6" id="modalGoalName"></p>
            <form method="POST" id="addFundsForm">
                <div class="mb-6">
                    <label class="block text-gray-700 font-medium mb-2">Montant à ajouter</label>
                    <input type="number" name="amount" step="0.01" min="0.01" required
                           class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-green-400 focus:outline-none">
                </div>
                <div class="flex space-x-4">
                    <button type="button" onclick="closeAddFundsModal()" 
                            class="flex-1 bg-gray-200 text-gray-700 px-6 py-3 rounded-xl hover:bg-gray-300 transition">
                        Annuler
                    </button>
                    <button type="submit" 
                            class="flex-1 bg-gradient-to-r from-green-400 to-emerald-400 text-white px-6 py-3 rounded-xl hover:shadow-lg transition">
                        Ajouter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showAddFundsModal(goalId, goalName) {
            document.getElementById('modalGoalName').textContent = goalName;
            document.getElementById('addFundsForm').action = `/savings-goals/${goalId}/add-funds`;
            document.getElementById('addFundsModal').classList.remove('hidden');
        }

        function closeAddFundsModal() {
            document.getElementById('addFundsModal').classList.add('hidden');
        }
    </script>
</body>
</html>