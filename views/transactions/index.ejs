<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    
    <!-- Navbar -->
    <nav class="bg-white shadow-sm border-b">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-6">
                    <a href="/dashboard" class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                        üí∞ FinSolutions
                    </a>
                    <div class="hidden md:flex space-x-4">
                        <a href="/dashboard" class="text-gray-600 hover:text-purple-600">Tableau de bord</a>
                        <a href="/transactions" class="text-purple-600 font-semibold">Transactions</a>
                        <a href="/budgets" class="text-gray-600 hover:text-purple-600">Budgets</a>
                        <a href="/categories" class="text-gray-600 hover:text-purple-600">Cat√©gories</a>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-600">Bonjour, <%= user.firstName %></span>
                    <a href="/logout" class="text-red-600 hover:text-red-800">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        
        <!-- Header avec statistiques -->
        <div class="mb-8">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-gray-800">Mes Transactions</h1>
                <a href="/transactions/create" class="bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold px-6 py-3 rounded-lg hover:from-purple-600 hover:to-pink-600 transition shadow-lg">
                    <i class="fas fa-plus mr-2"></i>Nouvelle transaction
                </a>
            </div>

            <!-- Statistiques -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <div class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl shadow-lg p-6 text-white">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-green-100 text-sm mb-1">Revenus</p>
                            <p class="text-3xl font-bold"><%= totalIncome.toFixed(2) %> MAD</p>
                        </div>
                        <div class="bg-white/20 rounded-full p-4">
                            <i class="fas fa-arrow-up text-3xl"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-red-500 to-pink-600 rounded-xl shadow-lg p-6 text-white">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-red-100 text-sm mb-1">D√©penses</p>
                            <p class="text-3xl font-bold"><%= totalExpense.toFixed(2) %> MAD</p>
                        </div>
                        <div class="bg-white/20 rounded-full p-4">
                            <i class="fas fa-arrow-down text-3xl"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl shadow-lg p-6 text-white">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-blue-100 text-sm mb-1">Solde</p>
                            <p class="text-3xl font-bold <%= balance >= 0 ? '' : 'text-red-200' %>">
                                <%= balance.toFixed(2) %> MAD
                            </p>
                        </div>
                        <div class="bg-white/20 rounded-full p-4">
                            <i class="fas fa-wallet text-3xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Messages -->
            <% if (success) { %>
                <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-4 rounded">
                    <p class="text-green-700"><i class="fas fa-check-circle mr-2"></i><%= success %></p>
                </div>
            <% } %>
            <% if (error) { %>
                <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4 rounded">
                    <p class="text-red-700"><i class="fas fa-exclamation-circle mr-2"></i><%= error %></p>
                </div>
            <% } %>

            <!-- Filtres -->
            <div class="bg-white rounded-xl shadow p-4">
                <form method="GET" action="/transactions" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <select name="type" class="px-4 py-2 border border-gray-300 rounded-lg">
                        <option value="">Tous les types</option>
                        <option value="income" <%= filters.type === 'income' ? 'selected' : '' %>>Revenus</option>
                        <option value="expense" <%= filters.type === 'expense' ? 'selected' : '' %>>D√©penses</option>
                    </select>

                    <select name="category" class="px-4 py-2 border border-gray-300 rounded-lg">
                        <option value="">Toutes les cat√©gories</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.id %>" <%= filters.category == cat.id ? 'selected' : '' %>>
                                <%= cat.name %>
                            </option>
                        <% }); %>
                    </select>

                    <select name="month" class="px-4 py-2 border border-gray-300 rounded-lg">
                        <option value="">Tous les mois</option>
                        <% for(let m = 1; m <= 12; m++) { %>
                            <option value="<%= m %>" <%= filters.month == m ? 'selected' : '' %>>
                                <%= new Date(2000, m-1).toLocaleString('fr-FR', {month: 'long'}) %>
                            </option>
                        <% } %>
                    </select>

                    <button type="submit" class="bg-purple-600 text-white font-semibold px-6 py-2 rounded-lg hover:bg-purple-700 transition">
                        <i class="fas fa-filter mr-2"></i>Filtrer
                    </button>
                </form>
            </div>
        </div>

        <!-- Liste des transactions -->
        <div class="bg-white rounded-xl shadow overflow-hidden">
            <% if (transactions.length === 0) { %>
                <div class="text-center py-16">
                    <i class="fas fa-receipt text-6xl text-gray-300 mb-4"></i>
                    <p class="text-gray-500 text-lg">Aucune transaction trouv√©e</p>
                    <a href="/transactions/create" class="inline-block mt-4 text-purple-600 hover:underline">
                        Cr√©er votre premi√®re transaction
                    </a>
                </div>
            <% } else { %>
                <table class="w-full">
                    <thead class="bg-gray-50 border-b">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Description</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase">Cat√©gorie</th>
                            <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase">Montant</th>
                            <th class="px-6 py-3 text-center text-xs font-semibold text-gray-600 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% transactions.forEach(transaction => { %>
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-gray-900 font-medium">
                                        <%= new Date(transaction.date).toLocaleDateString('fr-FR') %>
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 rounded-full flex items-center justify-center mr-3 <%= transaction.type === 'income' ? 'bg-green-100' : 'bg-red-100' %>">
                                            <i class="fas <%= transaction.type === 'income' ? 'fa-arrow-up text-green-600' : 'fa-arrow-down text-red-600' %>"></i>
                                        </div>
                                        <span class="text-gray-900"><%= transaction.description || 'Sans description' %></span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <% if (transaction.category) { %>
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium" style="background-color: <%= transaction.category.color %>15; color: <%= transaction.category.color %>">
                                            <i class="<%= transaction.category.icon %> mr-2"></i>
                                            <%= transaction.category.name %>
                                        </span>
                                    <% } else { %>
                                        <span class="text-gray-400">Non cat√©goris√©</span>
                                    <% } %>
                                </td>
                                <td class="px-6 py-4 text-right whitespace-nowrap">
                                    <span class="text-lg font-bold <%= transaction.type === 'income' ? 'text-green-600' : 'text-red-600' %>">
                                        <%= transaction.type === 'income' ? '+' : '-' %><%= parseFloat(transaction.amount).toFixed(2) %> MAD
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex items-center justify-center space-x-2">
                                        <a href="/transactions/<%= transaction.id %>/edit" class="text-blue-600 hover:text-blue-800 p-2">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="POST" action="/transactions/<%= transaction.id %>/delete" class="inline" onsubmit="return confirm('Supprimer cette transaction ?')">
                                            <button type="submit" class="text-red-600 hover:text-red-800 p-2">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </div>

    </div>

</body>
</html>